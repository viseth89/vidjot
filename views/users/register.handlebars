<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class='logo' src="/img/logo.png" alt="Company Logo">
      <h3 class="text-center">Account Register</h3>
      <form action="">
        <div class="form-group">
          <label for="name">Name</label>
          <input name='name' type="name" class='form-control' required>
        </div>
        <div class="form-group">
          <label name='email' for="email">Email</label>
          <input type="email" class='form-control' required>
        </div>
        <div class="form-group">
          <label name='password' for="password">Password</label>
          <input type="password" class='form-control' required>
        </div>
        <div class="form-group">
          <label name='password2' for="password2">Confirm Password</label>
          <input type="password2" class='form-control' required>
        </div>
        <button type='submit' class='btn btn-primary'>Submit</button>
      </form>

    </div>
  </div>
</div>